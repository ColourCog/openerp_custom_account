            <field name="name">Batch Confirm selected Payslips</field>
        </record>

        <record model="ir.values" id="action_batch_confirm_payslip">
            <field name="name">action_batch_confirm_payslip</field>
            <field name="action_id" ref="ir_actions_server_confirm_payslip" />
            <field name="value" eval="'ir.actions.server,' + str(ref('ir_actions_server_confirm_payslip'))" />
            <field name="key">action</field>
            <field name="model_id" ref="model_hr_payslip" />
            <field name="model">hr.payslip</field>
            <field name="key2">client_action_multi</field>
        </record>

  </data>
</openerp>
